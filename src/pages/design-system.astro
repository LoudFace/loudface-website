---
/**
 * Design System Reference Page
 *
 * This page is for AI agents and developers to reference component patterns.
 * NOT linked in navigation - accessed directly at /design-system
 *
 * AI: Read this file to understand approved styling patterns.
 */
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import SectionContainer from '../components/ui/SectionContainer.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
---

<Layout title="Design System | LoudFace" description="Internal design system reference">
  <main class="bg-surface-50 min-h-screen py-16 px-4 md:px-8">
    <div class="max-w-6xl mx-auto">

      <h1 class="text-5xl md:text-6xl font-heading font-medium text-surface-900 mb-4">
        Design System
      </h1>
      <p class="text-lg text-surface-600 mb-16">
        Reference page for AI agents and developers. Use these patterns when creating components.
      </p>

      <!-- ===== SECTION COMPONENTS ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Section Components</h2>

        <p class="text-surface-600 mb-6">
          Use these components for consistent layout across all pages. <strong>Never write raw section containers manually.</strong>
        </p>

        <!-- SectionContainer -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">SectionContainer</h3>
        <div class="bg-surface-100 p-4 rounded-xl font-mono text-sm text-surface-700 mb-6">
          <p class="mb-2">import SectionContainer from '../components/ui/SectionContainer.astro';</p>
          <p class="mb-4 text-surface-500">// Provides consistent padding, max-width, and horizontal gutters</p>
          <p>&lt;SectionContainer&gt;</p>
          <p class="pl-4">&lt;!-- content --&gt;</p>
          <p>&lt;/SectionContainer&gt;</p>
        </div>

        <h4 class="text-lg font-medium text-surface-800 mb-3">Padding Variants</h4>
        <div class="grid md:grid-cols-4 gap-4 mb-8">
          <div class="bg-white rounded-xl border border-surface-200 p-4">
            <code class="text-sm text-primary-600">padding="sm"</code>
            <p class="text-xs text-surface-500 mt-1">py-12 md:py-16</p>
            <p class="text-xs text-surface-600 mt-2">Compact sections</p>
          </div>
          <div class="bg-white rounded-xl border border-surface-200 p-4">
            <code class="text-sm text-primary-600">padding="default"</code>
            <p class="text-xs text-surface-500 mt-1">py-16 md:py-20 lg:py-24</p>
            <p class="text-xs text-surface-600 mt-2">Standard sections</p>
          </div>
          <div class="bg-white rounded-xl border border-surface-200 p-4">
            <code class="text-sm text-primary-600">padding="lg"</code>
            <p class="text-xs text-surface-500 mt-1">py-16 md:py-24 lg:py-32</p>
            <p class="text-xs text-surface-600 mt-2">Hero-adjacent</p>
          </div>
          <div class="bg-white rounded-xl border border-surface-200 p-4">
            <code class="text-sm text-primary-600">padding="none"</code>
            <p class="text-xs text-surface-500 mt-1">(no padding)</p>
            <p class="text-xs text-surface-600 mt-2">Custom needs</p>
          </div>
        </div>

        <!-- SectionHeader -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">SectionHeader</h3>
        <div class="bg-surface-100 p-4 rounded-xl font-mono text-sm text-surface-700 mb-6">
          <p class="mb-2">import SectionHeader from '../components/ui/SectionHeader.astro';</p>
          <p class="mb-4 text-surface-500">// Consistent H2 with optional highlight and subtitle</p>
          <p>&lt;SectionHeader</p>
          <p class="pl-4">title="Our Growth Process"</p>
          <p class="pl-4">highlightWord="Process"</p>
          <p class="pl-4">subtitle="How we help you scale."</p>
          <p>/&gt;</p>
        </div>

        <h4 class="text-lg font-medium text-surface-800 mb-3">Live Examples</h4>
        <div class="space-y-6 mb-8">
          <div class="bg-white rounded-xl border border-surface-200 p-6">
            <SectionHeader title="Section Title Only" />
          </div>
          <div class="bg-white rounded-xl border border-surface-200 p-6">
            <SectionHeader title="Title with Highlight" highlightWord="Highlight" />
          </div>
          <div class="bg-white rounded-xl border border-surface-200 p-6">
            <SectionHeader
              title="Full Section Header"
              highlightWord="Header"
              subtitle="This includes a subtitle for additional context about the section."
            />
          </div>
          <div class="bg-surface-900 rounded-xl p-6">
            <SectionHeader
              title="Dark Background"
              highlightWord="Dark"
              subtitle="Use variant='dark' for dark backgrounds."
              variant="dark"
            />
          </div>
        </div>
      </section>

      <!-- ===== TYPOGRAPHY ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Typography</h2>

        <!-- Standard H2 Pattern -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Standard Section H2 (Responsive)</h3>
        <div class="bg-primary-50 border border-primary-200 rounded-xl p-4 mb-6">
          <p class="text-sm text-primary-800 font-medium mb-2">CRITICAL: All section headings use this scale</p>
          <code class="text-sm text-primary-700">text-2xl sm:text-3xl md:text-4xl font-medium</code>
        </div>
        <div class="bg-white rounded-xl border border-surface-200 p-6 mb-8">
          <h2 class="text-2xl sm:text-3xl md:text-4xl font-medium text-surface-900">
            This is the Standard H2 Scale
          </h2>
        </div>

        <!-- Full Scale Reference -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Full Type Scale</h3>
        <div class="space-y-6 mb-8">
          <div>
            <span class="text-sm text-surface-500 font-mono">text-6xl font-heading font-medium</span>
            <h1 class="text-6xl font-heading font-medium text-surface-900">Heading 1</h1>
          </div>
          <div>
            <span class="text-sm text-surface-500 font-mono">text-5xl font-heading font-medium</span>
            <h2 class="text-5xl font-heading font-medium text-surface-900">Heading 2</h2>
          </div>
          <div>
            <span class="text-sm text-surface-500 font-mono">text-4xl font-heading font-medium</span>
            <h3 class="text-4xl font-heading font-medium text-surface-900">Heading 3</h3>
          </div>
          <div>
            <span class="text-sm text-surface-500 font-mono">text-3xl font-heading font-medium</span>
            <h4 class="text-3xl font-heading font-medium text-surface-900">Heading 4</h4>
          </div>
          <div>
            <span class="text-sm text-surface-500 font-mono">text-2xl font-heading font-medium</span>
            <h5 class="text-2xl font-heading font-medium text-surface-900">Heading 5</h5>
          </div>
        </div>

        <div class="space-y-4">
          <div>
            <span class="text-sm text-surface-500 font-mono">text-lg text-surface-600</span>
            <p class="text-lg text-surface-600">Body large - Use for lead paragraphs and subtitles.</p>
          </div>
          <div>
            <span class="text-sm text-surface-500 font-mono">text-base text-surface-700</span>
            <p class="text-base text-surface-700">Body default - Standard paragraph text for most content.</p>
          </div>
          <div>
            <span class="text-sm text-surface-500 font-mono">text-sm text-surface-500</span>
            <p class="text-sm text-surface-500">Caption/small - Use for labels, captions, and secondary text.</p>
          </div>
        </div>
      </section>

      <!-- ===== BUTTONS ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Buttons</h2>

        <!-- Button Component -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Button Component (Default: rounded-lg)</h3>
        <p class="text-surface-600 mb-4">
          Use the <code class="bg-surface-100 px-2 py-1 rounded text-sm">Button</code> component for most buttons.
        </p>
        <div class="flex flex-wrap gap-4 items-center mb-6">
          <Button variant="primary">Primary</Button>
          <Button variant="secondary">Secondary</Button>
          <Button variant="ghost">Ghost</Button>
          <Button variant="outline">Outline</Button>
        </div>
        <div class="bg-surface-100 p-4 rounded-xl font-mono text-sm text-surface-700 mb-8">
          <p>import Button from '../components/ui/Button.astro';</p>
          <p class="mt-2">&lt;Button variant="primary"&gt;Click me&lt;/Button&gt;</p>
          <p>&lt;Button variant="secondary"&gt;Secondary&lt;/Button&gt;</p>
          <p>&lt;Button variant="ghost"&gt;Ghost&lt;/Button&gt;</p>
          <p>&lt;Button variant="outline"&gt;Outline&lt;/Button&gt;</p>
        </div>

        <!-- Pill CTAs -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Pill CTAs (rounded-full)</h3>
        <p class="text-surface-600 mb-4">
          Use <code class="bg-surface-100 px-2 py-1 rounded text-sm">rounded-full</code> for special emphasis: header nav, tabs, hero CTAs.
        </p>
        <div class="flex flex-wrap gap-4 items-center mb-6">
          <button class="px-6 py-3 bg-surface-900 hover:bg-surface-800 text-white font-medium rounded-full transition-colors">
            Pill Primary
          </button>
          <button class="px-6 py-3 bg-surface-100 hover:bg-surface-200 text-surface-900 font-medium rounded-full transition-colors">
            Pill Secondary
          </button>
        </div>
        <div class="bg-surface-100 p-4 rounded-xl font-mono text-sm text-surface-700">
          <p>// Only use inline for pill CTAs in header/nav</p>
          <p>px-6 py-3 bg-surface-900 hover:bg-surface-800 text-white font-medium rounded-full</p>
        </div>
      </section>

      <!-- ===== COLORS ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Colors</h2>

        <!-- Primary -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Primary (Brand)</h3>
        <div class="flex flex-wrap gap-2 mb-8">
          <div class="w-20 h-20 bg-primary-50 rounded-lg flex items-end p-2"><span class="text-xs text-surface-700">50</span></div>
          <div class="w-20 h-20 bg-primary-100 rounded-lg flex items-end p-2"><span class="text-xs text-surface-700">100</span></div>
          <div class="w-20 h-20 bg-primary-200 rounded-lg flex items-end p-2"><span class="text-xs text-surface-700">200</span></div>
          <div class="w-20 h-20 bg-primary-300 rounded-lg flex items-end p-2"><span class="text-xs text-surface-700">300</span></div>
          <div class="w-20 h-20 bg-primary-400 rounded-lg flex items-end p-2"><span class="text-xs text-white">400</span></div>
          <div class="w-20 h-20 bg-primary-500 rounded-lg flex items-end p-2"><span class="text-xs text-white">500</span></div>
          <div class="w-20 h-20 bg-primary-600 rounded-lg flex items-end p-2"><span class="text-xs text-white">600</span></div>
          <div class="w-20 h-20 bg-primary-700 rounded-lg flex items-end p-2"><span class="text-xs text-white">700</span></div>
          <div class="w-20 h-20 bg-primary-800 rounded-lg flex items-end p-2"><span class="text-xs text-white">800</span></div>
          <div class="w-20 h-20 bg-primary-900 rounded-lg flex items-end p-2"><span class="text-xs text-white">900</span></div>
          <div class="w-20 h-20 bg-primary-950 rounded-lg flex items-end p-2"><span class="text-xs text-white">950</span></div>
        </div>

        <!-- Surface -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Surface (Neutrals)</h3>
        <div class="flex flex-wrap gap-2 mb-8">
          <div class="w-20 h-20 bg-surface-50 rounded-lg border border-surface-200 flex items-end p-2"><span class="text-xs text-surface-700">50</span></div>
          <div class="w-20 h-20 bg-surface-100 rounded-lg flex items-end p-2"><span class="text-xs text-surface-700">100</span></div>
          <div class="w-20 h-20 bg-surface-200 rounded-lg flex items-end p-2"><span class="text-xs text-surface-700">200</span></div>
          <div class="w-20 h-20 bg-surface-300 rounded-lg flex items-end p-2"><span class="text-xs text-surface-700">300</span></div>
          <div class="w-20 h-20 bg-surface-400 rounded-lg flex items-end p-2"><span class="text-xs text-white">400</span></div>
          <div class="w-20 h-20 bg-surface-500 rounded-lg flex items-end p-2"><span class="text-xs text-white">500</span></div>
          <div class="w-20 h-20 bg-surface-600 rounded-lg flex items-end p-2"><span class="text-xs text-white">600</span></div>
          <div class="w-20 h-20 bg-surface-700 rounded-lg flex items-end p-2"><span class="text-xs text-white">700</span></div>
          <div class="w-20 h-20 bg-surface-800 rounded-lg flex items-end p-2"><span class="text-xs text-white">800</span></div>
          <div class="w-20 h-20 bg-surface-900 rounded-lg flex items-end p-2"><span class="text-xs text-white">900</span></div>
          <div class="w-20 h-20 bg-surface-950 rounded-lg flex items-end p-2"><span class="text-xs text-white">950</span></div>
        </div>

        <!-- Semantic -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Semantic</h3>
        <div class="flex flex-wrap gap-4">
          <div class="flex gap-2">
            <div class="w-16 h-16 bg-success-light rounded-lg"></div>
            <div class="w-16 h-16 bg-success rounded-lg"></div>
            <div class="w-16 h-16 bg-success-dark rounded-lg"></div>
            <span class="text-sm text-surface-600 self-center">success</span>
          </div>
          <div class="flex gap-2">
            <div class="w-16 h-16 bg-warning-light rounded-lg"></div>
            <div class="w-16 h-16 bg-warning rounded-lg"></div>
            <div class="w-16 h-16 bg-warning-dark rounded-lg"></div>
            <span class="text-sm text-surface-600 self-center">warning</span>
          </div>
          <div class="flex gap-2">
            <div class="w-16 h-16 bg-error-light rounded-lg"></div>
            <div class="w-16 h-16 bg-error rounded-lg"></div>
            <div class="w-16 h-16 bg-error-dark rounded-lg"></div>
            <span class="text-sm text-surface-600 self-center">error</span>
          </div>
          <div class="flex gap-2">
            <div class="w-16 h-16 bg-info-light rounded-lg"></div>
            <div class="w-16 h-16 bg-info rounded-lg"></div>
            <div class="w-16 h-16 bg-info-dark rounded-lg"></div>
            <span class="text-sm text-surface-600 self-center">info</span>
          </div>
        </div>
      </section>

      <!-- ===== CARDS ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Cards</h2>

        <div class="grid md:grid-cols-2 gap-6 mb-8">
          <!-- Card Light -->
          <div class="bg-white rounded-2xl shadow-sm border border-surface-200 p-6">
            <h3 class="text-xl font-heading font-medium text-surface-900 mb-2">Card Title</h3>
            <p class="text-surface-600 mb-4">Card description with consistent spacing and typography.</p>
            <Button variant="primary" size="sm">Action</Button>
          </div>

          <!-- Card Dark -->
          <div class="bg-surface-900 rounded-2xl p-6">
            <h3 class="text-xl font-heading font-medium text-white mb-2">Dark Card</h3>
            <p class="text-surface-300 mb-4">Use on dark backgrounds with inverted text colors.</p>
            <button class="px-4 py-2 bg-white hover:bg-surface-100 text-surface-900 text-sm font-medium rounded-lg transition-colors">
              Action
            </button>
          </div>
        </div>

        <div class="bg-surface-100 p-4 rounded-xl font-mono text-sm text-surface-700">
          <p>Light: <code>bg-white rounded-2xl shadow-sm border border-surface-200 p-6</code></p>
          <p>Dark: <code>bg-surface-900 rounded-2xl p-6</code></p>
        </div>
      </section>

      <!-- ===== FORMS ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Form Elements</h2>

        <div class="max-w-md space-y-6 mb-8">
          <div>
            <label class="block text-sm font-medium text-surface-700 mb-2">Label</label>
            <input
              type="text"
              placeholder="Placeholder text"
              class="w-full px-4 py-3 border border-surface-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-shadow bg-white text-surface-900"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-surface-700 mb-2">Textarea</label>
            <textarea
              placeholder="Enter your message..."
              rows="3"
              class="w-full px-4 py-3 border border-surface-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-shadow bg-white text-surface-900 resize-none"
            ></textarea>
          </div>
        </div>

        <div class="bg-surface-100 p-4 rounded-xl font-mono text-sm text-surface-700">
          <p>Input: <code>px-4 py-3 border border-surface-300 rounded-lg focus:ring-2 focus:ring-primary-500</code></p>
          <p>Label: <code>text-sm font-medium text-surface-700 mb-2</code></p>
        </div>
      </section>

      <!-- ===== SPACING ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Spacing (8px Grid)</h2>

        <div class="flex flex-wrap gap-4 items-end mb-8">
          <div class="flex flex-col items-center">
            <div class="w-8 h-2 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-2</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-8 h-4 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-4</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-8 h-6 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-6</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-8 h-8 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-8</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-8 h-12 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-12</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-8 h-16 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-16</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-8 h-20 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-20</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-8 h-24 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">p-24</span>
          </div>
        </div>

        <p class="text-surface-600">
          Use the 8px grid: <code class="bg-surface-100 px-2 py-1 rounded text-sm">p-2, p-4, p-6, p-8, p-12, p-16, p-20, p-24</code>
        </p>
      </section>

      <!-- ===== BORDER RADIUS ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Border Radius</h2>

        <div class="flex flex-wrap gap-6 items-end">
          <div class="flex flex-col items-center">
            <div class="w-20 h-20 bg-primary-500 rounded-sm"></div>
            <span class="text-xs text-surface-500 mt-2">rounded-sm</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-20 h-20 bg-primary-500 rounded"></div>
            <span class="text-xs text-surface-500 mt-2">rounded</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-20 h-20 bg-primary-500 rounded-lg"></div>
            <span class="text-xs text-surface-500 mt-2">rounded-lg</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-20 h-20 bg-primary-500 rounded-xl"></div>
            <span class="text-xs text-surface-500 mt-2">rounded-xl</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-20 h-20 bg-primary-500 rounded-2xl"></div>
            <span class="text-xs text-surface-500 mt-2">rounded-2xl</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-20 h-20 bg-primary-500 rounded-3xl"></div>
            <span class="text-xs text-surface-500 mt-2">rounded-3xl</span>
          </div>
          <div class="flex flex-col items-center">
            <div class="w-20 h-20 bg-primary-500 rounded-full"></div>
            <span class="text-xs text-surface-500 mt-2">rounded-full</span>
          </div>
        </div>
      </section>

      <!-- ===== LOADING STATES ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Loading States</h2>

        <!-- Spinner -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Spinner</h3>
        <div class="flex items-center gap-6 mb-8">
          <div class="w-5 h-5 border-2 border-surface-300 border-t-primary-600 rounded-full animate-spin"></div>
          <div class="w-8 h-8 border-2 border-surface-300 border-t-primary-600 rounded-full animate-spin"></div>
          <div class="w-12 h-12 border-3 border-surface-300 border-t-primary-600 rounded-full animate-spin"></div>
        </div>

        <!-- Skeleton -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Skeleton</h3>
        <div class="max-w-md space-y-4 mb-8">
          <div class="h-6 w-3/4 bg-surface-200 rounded animate-pulse"></div>
          <div class="h-4 w-full bg-surface-200 rounded animate-pulse"></div>
          <div class="h-4 w-5/6 bg-surface-200 rounded animate-pulse"></div>
          <div class="flex gap-4">
            <div class="h-10 w-24 bg-surface-200 rounded-lg animate-pulse"></div>
            <div class="h-10 w-24 bg-surface-200 rounded-lg animate-pulse"></div>
          </div>
        </div>

        <div class="bg-surface-100 p-4 rounded-xl font-mono text-sm text-surface-700">
          <p>Spinner: <code>border-2 border-surface-300 border-t-primary-600 rounded-full animate-spin</code></p>
          <p>Skeleton: <code>bg-surface-200 rounded animate-pulse</code></p>
        </div>
      </section>

      <!-- ===== ERROR & EMPTY STATES ===== -->
      <section class="mb-20">
        <h2 class="text-3xl font-heading font-medium text-surface-900 mb-8">Error & Empty States</h2>

        <!-- Error Message -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Error Message</h3>
        <div class="max-w-md mb-8">
          <div class="bg-error-light border border-error/20 rounded-xl p-4 flex gap-3">
            <svg class="w-5 h-5 text-error flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-error-dark font-medium">Something went wrong</p>
              <p class="text-error-dark/80 text-sm mt-1">Please try again or contact support if the problem persists.</p>
            </div>
          </div>
        </div>

        <!-- Success Message -->
        <h3 class="text-xl font-heading font-medium text-surface-800 mb-4">Success Message</h3>
        <div class="max-w-md mb-8">
