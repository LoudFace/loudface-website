---
/**
 * Case Study Detail Page
 *
 * Structure:
 * - Hero with client branding
 * - Results strip
 * - Main content (body + sidebar)
 * - Testimonial
 * - Related work
 * - CTA
 */
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/ui/Header.astro';
import Footer from '../../components/ui/Footer.astro';
import SectionContainer from '../../components/ui/SectionContainer.astro';
import Button from '../../components/ui/Button.astro';
import { fetchHomepageData, getAccessToken, getEmptyHomepageData } from '../../lib/cms-data';
import { asset } from '../../lib/assets';
import { heroImage, avatarImage, thumbnailImage, optimizeImage } from '../../lib/image-utils';
import type {
  CaseStudy,
  Client,
  Testimonial,
  Industry,
  Technology,
  ServiceCategory,
} from '../../lib/types';

export const prerender = false;

const { slug } = Astro.params;

const accessToken = getAccessToken(Astro.locals);
const cmsData = accessToken
  ? await fetchHomepageData(accessToken)
  : getEmptyHomepageData();

const {
  caseStudies,
  clients: clientsMap,
  testimonials: testimonialsMap,
  allTestimonials,
  industries: industriesMap,
  technologies: technologiesMap,
  serviceCategories: serviceCategoriesMap,
  blogPosts,
} = cmsData;

const study = caseStudies.find((s) => s.slug === slug) as (CaseStudy & { id: string }) | undefined;

if (!study) {
  return Astro.redirect('/404');
}

// Helpers
function getClient(id: string | undefined): Client | undefined {
  return id ? clientsMap.get(id) : undefined;
}

function getIndustry(id: string | undefined): Industry | undefined {
  return id ? industriesMap.get(id) : undefined;
}

function getTechnologies(ids: string[] | undefined): Technology[] {
  if (!ids) return [];
  return ids.map(id => technologiesMap.get(id)).filter((t): t is Technology => !!t);
}

function getServices(ids: string[] | undefined): ServiceCategory[] {
  if (!ids) return [];
  return ids.map(id => serviceCategoriesMap.get(id)).filter((s): s is ServiceCategory => !!s);
}

function getTestimonial(caseStudyId: string): Testimonial | undefined {
  const indexed = testimonialsMap.get(caseStudyId);
  if (indexed) return indexed;
  if (study?.testimonial) {
    return allTestimonials.find((t) => t.id === study.testimonial);
  }
  return undefined;
}

// Color contrast
function getContrastColor(hex: string | undefined): string {
  if (!hex) return '#ffffff';
  const clean = hex.replace('#', '');
  if (clean.length < 6) return '#ffffff';
  const r = parseInt(clean.slice(0, 2), 16);
  const g = parseInt(clean.slice(2, 4), 16);
  const b = parseInt(clean.slice(4, 6), 16);
  const luminance = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
  return luminance > 0.5 ? '#0a0a0a' : '#ffffff';
}

// Data
const client = getClient(study.client);
const industry = getIndustry(study.industry);
const technologies = getTechnologies(study.technologies);
const services = getServices(study['services-provided']);
const testimonial = getTestimonial(study.id);

const clientColor = study['client-color'] || '#6366f1';
const textColor = getContrastColor(clientColor);
const websiteUrl = study['website-link'] || study['visit-the-website'];

const results = [
  { number: study['result-1---number'], title: study['result-1---title'] },
  { number: study['result-2---number'], title: study['result-2---title'] },
  { number: study['result-3---number'], title: study['result-3---title'] },
].filter(r => r.number);

const relatedStudies = caseStudies.filter(s => s.slug !== slug).slice(0, 3);

// Extract TOC from main-body HTML
function extractTocAndAddIds(html: string | undefined): { toc: { id: string; text: string }[]; html: string } {
  if (!html) return { toc: [], html: '' };

  const toc: { id: string; text: string }[] = [];
  let index = 0;

  const processedHtml = html.replace(/<h2([^>]*)>(.*?)<\/h2>/gi, (match, attrs, content) => {
    // Strip HTML tags from content for clean text
    const text = content.replace(/<[^>]*>/g, '').trim();
    // Create slug from text
    const id = `section-${index++}-${text.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '')}`;
    toc.push({ id, text });
    // Add id attribute to h2
    return `<h2${attrs} id="${id}">${content}</h2>`;
  });

  return { toc, html: processedHtml };
}

const { toc, html: processedBody } = extractTocAndAddIds(study['main-body']);

// Meta
const projectTitle = study['project-title'] || study.name;
const title = `${projectTitle} | LoudFace`;
const description = study['paragraph-summary'] || `Case study: ${projectTitle}`;
const canonicalUrl = `https://www.loudface.co/work/${slug}`;

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://www.loudface.co/' },
    { '@type': 'ListItem', position: 2, name: 'Work', item: 'https://www.loudface.co/work' },
    { '@type': 'ListItem', position: 3, name: projectTitle },
  ],
};

const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: projectTitle,
  description,
  image: study['main-project-image-thumbnail']?.url,
  author: { '@type': 'Organization', name: 'LoudFace', url: 'https://www.loudface.co' },
  publisher: { '@type': 'Organization', name: 'LoudFace' },
  mainEntityOfPage: { '@type': 'WebPage', '@id': canonicalUrl },
};
---

<Layout title={title} description={description} canonicalUrl={canonicalUrl}>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} slot="head" />

  <div class="page-wrapper">
    <Header />

    <main id="main-content" class="main-wrapper">
      <!-- Hero -->
      <section
        class="pt-24 pb-12"
        style={`background: ${clientColor};`}
      >
        <div class="px-4 md:px-8 lg:px-12">
          <div class="max-w-5xl mx-auto">
            <nav class="mb-6" aria-label="Breadcrumb">
              <ol class="flex items-center gap-2 text-sm opacity-70" style={`color: ${textColor};`}>
                <li><a href="/work" class="hover:opacity-100">Work</a></li>
                <li><span class="mx-1">/</span></li>
                <li class="opacity-100">{projectTitle}</li>
              </ol>
            </nav>

            {client?.['light-logo']?.url && (
              <img
                src={optimizeImage(client['light-logo'].url, 120)}
                alt={client.name}
                class="h-6 mb-4 opacity-80"
              />
            )}

            <h1
              class="text-3xl md:text-4xl lg:text-5xl font-medium leading-tight"
              style={`color: ${textColor};`}
            >
              {projectTitle}
            </h1>

            {study['paragraph-summary'] && (
              <p
                class="mt-4 text-lg max-w-2xl opacity-90"
                style={`color: ${textColor};`}
              >
                {study['paragraph-summary']}
              </p>
            )}

            <div class="mt-6 flex flex-wrap items-center gap-3">
              {industry && (
                <span class="px-3 py-1 text-sm rounded-full bg-white/15" style={`color: ${textColor};`}>
                  {industry.name}
                </span>
              )}
              {study.country && (
                <span class="px-3 py-1 text-sm rounded-full bg-white/15" style={`color: ${textColor};`}>
                  {study.country}
                </span>
              )}
              {websiteUrl && (
                <a
                  href={websiteUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1.5 px-3 py-1 text-sm font-medium rounded-full bg-white/20 hover:bg-white/30 transition-colors"
                  style={`color: ${textColor};`}
                >
                  Visit site
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </section>

      <!-- Hero Image -->
      {study['main-project-image-thumbnail']?.url && (() => {
        const hero = heroImage(study['main-project-image-thumbnail'].url);
        return (
          <div class="bg-white pt-12 md:pt-16">
            <div class="px-4 md:px-8 lg:px-12">
              <div class="max-w-5xl mx-auto">
                <img
                  src={hero.src}
                  srcset={hero.srcset}
                  sizes="(max-width: 768px) 100vw, (max-width: 1200px) 80vw, 1000px"
                  alt={study['main-project-image-thumbnail'].alt || projectTitle}
                  class="w-full rounded-xl shadow-lg"
                  loading="eager"
                  fetchpriority="high"
                />
              </div>
            </div>
          </div>
        );
      })()}

      <!-- Main Content -->
      <SectionContainer class="bg-white" padding="sm">
        <div class="max-w-5xl mx-auto">
          <!-- Results & TOC Header -->
          <div class="mb-10 pb-8 border-b border-surface-200">
            <!-- Key Results -->
            {results.length > 0 && (
              <div class="mb-8">
                <h3 class="text-sm font-medium text-surface-500 uppercase tracking-wide mb-4">Key Results</h3>
                <div class={`grid gap-4 ${
                  results.length === 1 ? 'grid-cols-1' :
                  results.length === 2 ? 'grid-cols-2' :
                  'grid-cols-1 sm:grid-cols-3'
                }`}>
                  {results.map((result) => (
                    <div class="flex items-baseline gap-3 p-4 rounded-lg bg-surface-50 border-l-4" style={`border-left-color: ${clientColor};`}>
                      <span class="text-2xl md:text-3xl font-medium text-surface-900">{result.number}</span>
                      <span class="text-sm text-surface-600">{result.title}</span>
                    </div>
                  ))}
                </div>
              </div>
            )}

            <!-- Table of Contents - Mobile only -->
            {toc.length > 0 && (
              <nav class="toc lg:hidden">
                <h3 class="text-sm font-medium text-surface-500 uppercase tracking-wide mb-4">On this page</h3>
                <ul class="flex flex-wrap gap-x-6 gap-y-2">
                  {toc.map((item) => (
                    <li>
                      <a
                        href={`#${item.id}`}
                        class="toc-link text-sm text-surface-600 hover:text-primary-600 transition-colors"
                      >
                        {item.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            )}
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-[1fr_280px] gap-8 lg:gap-12">
            <!-- Article Body -->
            <article class="min-w-0">
              {processedBody ? (
                <div class="case-study-prose" set:html={processedBody} />
              ) : (
                <p class="text-surface-500">No content available for this case study.</p>
              )}
            </article>

            <!-- Sidebar -->
            <aside class="hidden lg:block lg:sticky lg:top-24 lg:self-start space-y-8">
                <!-- Table of Contents -->
                {toc.length > 0 && (
                  <nav class="toc">
                    <h3 class="text-sm font-medium text-surface-500 uppercase tracking-wide mb-3">On this page</h3>
                    <ul class="space-y-2">
                      {toc.map((item) => (
                        <li>
                          <a
                            href={`#${item.id}`}
                            class="toc-link block text-sm text-surface-600 hover:text-primary-600 transition-colors py-1 border-l-2 border-surface-200 hover:border-primary-500 pl-3"
                          >
                            {item.text}
                          </a>
                        </li>
                      ))}
                    </ul>
                  </nav>
                )}

                <!-- Services -->
                {services.length > 0 && (
                  <div>
                    <h3 class="text-sm font-medium text-surface-500 uppercase tracking-wide mb-3">Services</h3>
                    <div class="flex flex-wrap gap-2">
                      {services.map(svc => (
                        <span class="px-3 py-1 bg-surface-100 rounded text-sm text-surface-700">
                          {svc.name}
                        </span>
                      ))}
                    </div>
                  </div>
                )}

                <!-- Technologies -->
                {technologies.length > 0 && (
                  <div>
                    <h3 class="text-sm font-medium text-surface-500 uppercase tracking-wide mb-3">Technologies</h3>
                    <div class="flex flex-wrap gap-2">
                      {technologies.map(tech => (
                        <span class="px-3 py-1 bg-surface-100 rounded text-sm text-surface-700">
                          {tech.name}
                        </span>
                      ))}
                    </div>
                  </div>
                )}

                <!-- Client Info -->
                {(study.country || study['company-size']) && (
                  <div>
                    <h3 class="text-sm font-medium text-surface-500 uppercase tracking-wide mb-3">Client</h3>
                    <div class="space-y-2 text-sm text-surface-700">
                      {client?.name && <div>{client.name}</div>}
                      {study.country && <div>{study.country}</div>}
                      {study['company-size'] && <div>{study['company-size']} employees</div>}
                    </div>
                  </div>
                )}

                <!-- Visit Website -->
                {websiteUrl && (
                  <a
                    href={websiteUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center gap-2 w-full px-4 py-3 bg-surface-900 text-white rounded-lg font-medium hover:bg-surface-800 transition-colors"
                  >
                    View live site
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
            </aside>
          </div>
        </div>
      </SectionContainer>

      <!-- Testimonial -->
      {testimonial && testimonial['testimonial-body'] && (
        <section class="bg-surface-50 py-16 md:py-24">
          <div class="px-4 md:px-8 lg:px-12">
            <div class="max-w-3xl mx-auto text-center">
              <svg class="w-8 h-8 mx-auto mb-6 text-surface-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
              <blockquote
                class="text-xl md:text-2xl text-surface-800 leading-relaxed"
                set:html={testimonial['testimonial-body']}
              />
              <div class="mt-6 flex items-center justify-center gap-3">
                {testimonial['profile-image']?.url && (
                  <img
                    src={avatarImage(testimonial['profile-image'].url)}
                    alt={testimonial.name}
                    class="w-10 h-10 rounded-full object-cover"
                  />
                )}
                <div class="text-left">
                  <div class="font-medium text-surface-900">{testimonial.name}</div>
                  {testimonial.role && (
                    <div class="text-sm text-surface-500">{testimonial.role}</div>
                  )}
                </div>
              </div>
            </div>
          </div>
        </section>
      )}

      <!-- Related Work -->
      {relatedStudies.length > 0 && (
        <SectionContainer>
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-2xl md:text-3xl font-medium text-surface-900">More work</h2>
            <a href="/work" class="text-sm font-medium text-surface-600 hover:text-primary-600 transition-colors">
              View all â†’
            </a>
          </div>

          <div class="grid md:grid-cols-3 gap-6">
            {relatedStudies.map((related) => {
              const relatedClient = getClient(related.client);
              const relatedColor = related['client-color'] || '#6366f1';

              return (
                <a
                  href={`/work/${related.slug}`}
                  class="group block bg-white rounded-xl border border-surface-200 overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-200"
                >
                  <div class="h-1" style={`background: ${relatedColor};`} />
                  <div class="aspect-[16/10] overflow-hidden">
                    <img
                      src={thumbnailImage(related['main-project-image-thumbnail']?.url) || asset('/images/placeholder.webp')}
                      alt={related['project-title'] || related.name}
                      class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                  <div class="p-4">
                    <h3 class="font-medium text-surface-900 group-hover:text-primary-600 transition-colors">
                      {related['project-title'] || related.name}
                    </h3>
                    {relatedClient?.name && (
                      <p class="mt-1 text-sm text-surface-500">{relatedClient.name}</p>
                    )}
                  </div>
                </a>
              );
            })}
          </div>
        </SectionContainer>
      )}

      <!-- CTA -->
      <section class="bg-surface-900 py-20 md:py-28">
        <div class="px-4 md:px-8 lg:px-12">
          <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-2xl md:text-3xl font-medium text-white">
              Want similar results?
            </h2>
            <p class="mt-4 text-surface-400">
              Let's talk about your project.
            </p>
            <div class="mt-8">
              <Button
                variant="primary"
                size="lg"
                calLink="arnelbukva/loudface-intro-call"
                class="bg-white text-surface-900 hover:bg-surface-100"
              >
                Book a call
              </Button>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer caseStudies={caseStudies} blogPosts={blogPosts} />
  </div>
</Layout>

<style>
  /* Case Study Prose - Elevated typography */
  .case-study-prose {
    font-family: Satoshi, system-ui, sans-serif;
    font-size: 1.125rem;
    line-height: 1.75;
    color: #525252;
  }

  .case-study-prose :global(p) {
    margin-bottom: 1.5rem;
  }

  /* H2 - Left accent border with gradient */
  .case-study-prose :global(h2) {
    position: relative;
    padding: 1rem 0 1rem 1.25rem;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    font-family: "Neue Montreal", system-ui, sans-serif;
    font-weight: 500;
    font-size: 1.5rem;
    color: #171717;
    border-left: 3px solid #6366f1;
    background: linear-gradient(to right, #fafafa 0%, transparent 70%);
  }

  .case-study-prose :global(h2:first-child) {
    margin-top: 0;
  }

  /* H3 - Dot accent marker */
  .case-study-prose :global(h3) {
    position: relative;
    padding-left: 1rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-family: "Neue Montreal", system-ui, sans-serif;
    font-weight: 500;
    font-size: 1.25rem;
    color: #262626;
  }

  .case-study-prose :global(h3)::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #a5a5a5;
  }

  /* Links - Animated gradient underline */
  .case-study-prose :global(a) {
    color: #4f46e5;
    text-decoration: none;
    background-image: linear-gradient(to right, #6366f1, #4f46e5);
    background-size: 0% 2px;
    background-position: 0 100%;
    background-repeat: no-repeat;
    transition: background-size 0.2s ease-out, color 0.2s ease-out;
  }

  .case-study-prose :global(a:hover) {
    color: #4338ca;
    background-size: 100% 2px;
  }

  /* Unordered lists - Primary bullets */
  .case-study-prose :global(ul) {
    padding-left: 0;
    margin-bottom: 1.5rem;
    list-style: none;
  }

  .case-study-prose :global(li) {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .case-study-prose :global(ul > li)::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.625rem;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #6366f1;
  }

  /* Ordered lists - Monospace numbers */
  .case-study-prose :global(ol) {
    padding-left: 0;
    margin-bottom: 1.5rem;
    list-style: none;
    counter-reset: item;
  }

  .case-study-prose :global(ol > li) {
    padding-left: 2rem;
    counter-increment: item;
  }

  .case-study-prose :global(ol > li)::before {
    content: counter(item) ".";
    position: absolute;
    left: 0;
    font-family: "Geist Mono", monospace;
    font-weight: 500;
    font-size: 0.875rem;
    color: #6366f1;
  }

  /* Blockquotes - Card style */
  .case-study-prose :global(blockquote) {
    position: relative;
    margin: 2.5rem 0;
    padding: 1.5rem 2rem;
    background: #fafafa;
    border-radius: 0.75rem;
    border-left: 4px solid #6366f1;
  }

  .case-study-prose :global(blockquote p) {
    margin: 0;
  }

  /* Strong text */
  .case-study-prose :global(strong) {
    font-weight: 600;
    color: #171717;
  }

  /* Images */
  .case-study-prose :global(img) {
    border-radius: 0.75rem;
    margin: 2rem 0;
  }

  /* Figures */
  .case-study-prose :global(figure) {
    margin: 2.5rem 0;
  }

  .case-study-prose :global(figcaption) {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: #737373;
    text-align: center;
  }

  /* Horizontal rules */
  .case-study-prose :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(to right, transparent, #e5e5e5, transparent);
    margin: 3rem 0;
  }

  /* Inline code */
  .case-study-prose :global(code) {
    font-family: "Geist Mono", monospace;
    font-size: 0.875em;
    padding: 0.2em 0.4em;
    background: #f5f5f5;
    border-radius: 0.25rem;
    color: #4f46e5;
  }

  /* Smooth scroll for anchor links */
  :global(html) {
    scroll-behavior: smooth;
  }

  /* Scroll offset for fixed header */
  .case-study-prose :global([id]) {
    scroll-margin-top: 6rem;
  }

  /* TOC link truncation for long headings */
  .toc-link {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.4;
  }
</style>
