---
import Layout from '../../layouts/Layout.astro';
import { COLLECTION_IDS } from '../../lib/constants';

// SSR - no prerender (fetch CMS data at request time)
export const prerender = false;

const { slug } = Astro.params;

// Support both Webflow Cloud runtime and local .env
const accessToken = (Astro.locals as any).runtime?.env?.WEBFLOW_SITE_API_TOKEN
  || import.meta.env.WEBFLOW_SITE_API_TOKEN;

let study: any = null;
let error: string | null = null;

if (accessToken) {
  try {
    // Use Webflow API v2
    const response = await fetch(
      `https://api.webflow.com/v2/collections/${COLLECTION_IDS['case-studies']}/items`,
      {
        headers: {
          'Authorization': `Bearer ${accessToken}`,
        },
      }
    );

    if (response.ok) {
      const data = await response.json();
      // v2 API: find by slug in fieldData and normalize structure
      const item = data.items?.find((item: any) => item.fieldData?.slug === slug);
      if (item) {
        // Merge item metadata with fieldData for easier template access
        study = { ...item, ...item.fieldData };
      }
    } else {
      error = `API error: ${response.status}`;
    }
  } catch (e) {
    error = 'Failed to fetch from Webflow CMS';
  }
} else {
  error = 'CMS not configured. Please set up your Webflow API token and collection ID.';
}

// Redirect to 404 if study not found
if (!study && !error) {
  return Astro.redirect('/404');
}

// Page metadata
const title = study?.name ? `${study.name} | LoudFace` : 'Case Study | LoudFace';
const description = study?.['project-summary'] || study?.['project-description']?.slice(0, 160) || 'View our case study';
const canonicalUrl = `https://www.loudface.co/work/${slug}`;

// Structured Data - BreadcrumbList
const breadcrumbSchema = study ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://www.loudface.co/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Work",
      "item": "https://www.loudface.co/work"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": study.name
    }
  ]
} : null;

// Structured Data - Article (Case Study)
const articleSchema = study ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": study.name,
  "description": study['project-summary'] || description,
  "image": study['main-image']?.url || "https://www.loudface.co/images/og-image.jpg",
  "author": {
    "@type": "Organization",
    "name": "LoudFace",
    "url": "https://www.loudface.co"
  },
  "publisher": {
    "@type": "Organization",
    "name": "LoudFace",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.loudface.co/images/loudface.svg"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  },
  "datePublished": study.createdOn || new Date().toISOString(),
  "dateModified": study.lastUpdated || study.createdOn || new Date().toISOString()
} : null;
---

<Layout title={title} description={description} canonicalUrl={canonicalUrl}>
  {/* Structured Data for Case Studies */}
  {breadcrumbSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} slot="head" />
  )}
  {articleSchema && (
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} slot="head" />
  )}
  <main>
    {error ? (
      <section class="py-16 md:py-24">
        <div class="px-4 md:px-8 lg:px-12">
          <div class="max-w-7xl mx-auto">
            <div class="text-center py-16">
              <h1 class="text-4xl md:text-5xl font-medium text-surface-900">CMS Configuration Required</h1>
              <p class="mt-4 text-lg text-surface-600">{error}</p>
              <p class="mt-2 text-sm text-surface-400">
                Please configure your Webflow CMS collection ID and ensure
                your API token is set up correctly.
              </p>
            </div>
          </div>
        </div>
      </section>
    ) : study ? (
      <section class="py-16 md:py-24">
        <div class="px-4 md:px-8 lg:px-12">
          <div class="max-w-7xl mx-auto">
            <!-- Case Study Header -->
            <div class="text-center mb-12">
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-medium text-surface-900">{study.name}</h1>
              {study['client-name'] && (
                <p class="mt-4 text-lg text-surface-500">
                  {study['client-name']}
                </p>
              )}
            </div>

            <!-- Hero Image -->
            {study['main-image'] && (
              <div class="mb-12 rounded-2xl overflow-hidden">
                <img
                  src={study['main-image'].url}
                  alt={study['main-image'].alt || study.name}
                  class="w-full h-auto block"
                  loading="eager"
                  fetchpriority="high"
                />
              </div>
            )}

            <!-- Project Details -->
            <div class="max-w-3xl mx-auto mb-12">
              {study['project-summary'] && (
                <div class="mb-8">
                  <p class="text-lg text-surface-700">{study['project-summary']}</p>
                </div>
              )}

              {study['project-description'] && (
                <div class="prose prose-lg max-w-none text-surface-600" set:html={study['project-description']} />
              )}
            </div>

            <!-- Gallery Images -->
            {study['gallery-images'] && study['gallery-images'].length > 0 && (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
                {study['gallery-images'].map((image: any) => (
                  <img
                    src={image.url}
                    alt={image.alt || ''}
                    class="w-full h-auto rounded-lg"
                    loading="lazy"
                  />
                ))}
              </div>
            )}

            <!-- Back to Work Link -->
            <div class="text-center py-12">
              <a
                href="/work"
                class="inline-flex items-center justify-center px-6 py-3 border border-surface-200 text-surface-900 font-medium rounded-lg hover:bg-surface-100 transition-colors"
              >
                <span>View All Work</span>
              </a>
            </div>
          </div>
        </div>
      </section>
    ) : null}
  </main>
</Layout>
