---
interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
  image?: string;
}

const { quote, author, role, company, image } = Astro.props;
---

<div class="bg-white rounded-2xl border border-gray-200 p-6 md:p-8 hover:shadow-lg transition-shadow">
  <!-- Stars -->
  <div class="flex gap-1 mb-4">
    {[...Array(5)].map(() => (
      <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <!-- Quote -->
  <blockquote class="text-gray-700 leading-relaxed mb-6">
    "{quote}"
  </blockquote>

  <!-- Author -->
  <div class="flex items-center gap-4">
    {image ? (
      <img src={image} alt={author} class="w-12 h-12 rounded-full object-cover" loading="lazy" />
    ) : (
      <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center">
        <span class="text-accent font-semibold">{author.charAt(0)}</span>
      </div>
    )}
    <div>
      <p class="font-semibold">{author}</p>
      <p class="text-sm text-gray-500">{role} | {company}</p>
    </div>
  </div>
</div>
