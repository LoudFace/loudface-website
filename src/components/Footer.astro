---
import NewsletterForm from './NewsletterForm.astro';

const companyLinks = [
  { href: '#about', label: 'About us' },
  { href: '#contact', label: 'Contact' },
  { href: '#careers', label: 'Careers' },
];

const serviceLinks = [
  { href: '#', label: 'Webflow Development' },
  { href: '#', label: 'UX/UI Design' },
  { href: '#', label: 'Copywriting' },
  { href: '#', label: 'SEO/AEO' },
  { href: '#', label: 'CRO' },
];

const industryLinks = [
  { href: '#', label: 'SaaS' },
  { href: '#', label: 'E-commerce' },
  { href: '#', label: 'Education' },
  { href: '#', label: 'Healthcare' },
];

const socialLinks = [
  { href: '#', label: 'Instagram' },
  { href: '#', label: 'LinkedIn' },
  { href: '#', label: 'Webflow' },
  { href: '#', label: 'Dribbble' },
];
---

<footer class="bg-black text-white pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10 mb-12">
      <!-- Brand & Newsletter -->
      <div class="lg:col-span-2">
        <a href="/" class="text-2xl font-bold mb-4 block">LoudFace</a>
        <p class="text-gray-400 mb-6 max-w-sm">
          Join our newsletter to stay up to date on industry news and strategies
        </p>
        <NewsletterForm />
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-semibold mb-4">Company</h4>
        <ul class="space-y-3">
          {companyLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-semibold mb-4">Services</h4>
        <ul class="space-y-3">
          {serviceLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Industries -->
      <div>
        <h4 class="font-semibold mb-4">Industries</h4>
        <ul class="space-y-3">
          {industryLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Social Links -->
    <div class="flex flex-wrap gap-4 mb-8">
      {socialLinks.map((link) => (
        <a
          href={link.href}
          class="text-gray-400 hover:text-white transition-colors"
        >
          {link.label}
        </a>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">
        &copy; {new Date().getFullYear()} LoudFace. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm">
        <a href="#" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">Terms of Service</a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors">Cookie Settings</a>
      </div>
    </div>

    <!-- Webflow Enterprise Partner Badge -->
    <div class="mt-8 flex justify-center">
      <div class="bg-gray-900 rounded-lg px-4 py-2 text-sm text-gray-400">
        Webflow Enterprise Partner
      </div>
    </div>
  </div>
</footer>
