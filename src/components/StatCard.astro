---
interface Props {
  value: string;
  label: string;
  description?: string;
}

const { value, label, description } = Astro.props;
---

<div class="text-center p-6">
  <div class="text-4xl md:text-5xl font-bold text-accent mb-2">{value}</div>
  <div class="text-lg font-semibold text-gray-900 mb-2">{label}</div>
  {description && (
    <p class="text-sm text-gray-600 max-w-xs mx-auto">{description}</p>
  )}
</div>
