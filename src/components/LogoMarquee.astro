---
// Client logos - using placeholder text since we don't have actual logos
const logos = [
  'Radisson Hotels',
  'Icypeas',
  'Toku',
  'Eraser',
  'Dimer Health',
  'Montblanc',
  'Brandfirm',
  'Grateful Labs',
  'Viaduct',
  'SendSwift',
];
---

<section class="py-12 bg-gray-50 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <p class="text-center text-sm font-medium text-gray-500 uppercase tracking-wider">
      Trusted By Industry Leading Teams of All Sizes
    </p>
  </div>

  <div class="relative">
    <!-- Gradient overlays -->
    <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-gray-50 to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-gray-50 to-transparent z-10 pointer-events-none"></div>

    <!-- Marquee container -->
    <div class="flex animate-marquee">
      {/* First set of logos */}
      {logos.map((logo) => (
        <div class="flex-shrink-0 mx-8 md:mx-12">
          <div class="h-12 px-6 flex items-center justify-center bg-white rounded-lg border border-gray-200">
            <span class="text-gray-600 font-semibold whitespace-nowrap">{logo}</span>
          </div>
        </div>
      ))}
      {/* Duplicate for seamless loop */}
      {logos.map((logo) => (
        <div class="flex-shrink-0 mx-8 md:mx-12">
          <div class="h-12 px-6 flex items-center justify-center bg-white rounded-lg border border-gray-200">
            <span class="text-gray-600 font-semibold whitespace-nowrap">{logo}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
