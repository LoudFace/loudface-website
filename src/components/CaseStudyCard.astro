---
interface Props {
  stat: string;
  statLabel: string;
  title: string;
  description: string;
  testimonial?: string;
  author?: string;
  authorRole?: string;
  image?: string;
}

const { stat, statLabel, title, description, testimonial, author, authorRole, image } = Astro.props;
---

<div class="bg-white rounded-2xl border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
  {image && (
    <div class="aspect-video bg-gray-100 overflow-hidden">
      <img src={image} alt={title} class="w-full h-full object-cover" loading="lazy" />
    </div>
  )}

  <div class="p-6 md:p-8">
    <!-- Stat -->
    <div class="mb-4">
      <span class="text-3xl md:text-4xl font-bold text-accent">{stat}</span>
      <p class="text-sm text-gray-600 mt-1">{statLabel}</p>
    </div>

    <!-- Title & Description -->
    <h3 class="text-xl font-semibold mb-3">{title}</h3>
    <p class="text-gray-600 text-sm leading-relaxed mb-6">{description}</p>

    <!-- Testimonial -->
    {testimonial && (
      <blockquote class="border-l-2 border-accent pl-4 mb-6">
        <p class="text-gray-700 italic text-sm">"{testimonial}"</p>
        {author && (
          <footer class="mt-3">
            <p class="font-semibold text-sm">{author}</p>
            {authorRole && <p class="text-gray-500 text-xs">{authorRole}</p>}
          </footer>
        )}
      </blockquote>
    )}

    <!-- CTA -->
    <a
      href="#"
      class="inline-flex items-center text-sm font-semibold text-accent hover:text-accent-hover transition-colors"
    >
      Read case study
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</div>
