---
interface Props {
  title: string;
  excerpt?: string;
  category: string;
  readTime: string;
  author: string;
  image?: string;
  href?: string;
}

const { title, excerpt, category, readTime, author, image, href = '#' } = Astro.props;
---

<article class="group bg-white rounded-2xl border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
  <!-- Image -->
  <div class="aspect-video bg-gray-100 overflow-hidden">
    {image ? (
      <img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
    ) : (
      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-accent/5 to-accent/20">
        <span class="text-accent font-bold text-2xl">LF</span>
      </div>
    )}
  </div>

  <div class="p-6">
    <!-- Meta -->
    <div class="flex items-center gap-3 text-sm text-gray-500 mb-3">
      <span class="bg-gray-100 px-3 py-1 rounded-full font-medium">{category}</span>
      <span>{readTime} read</span>
    </div>

    <!-- Title -->
    <h3 class="text-lg font-semibold mb-2 group-hover:text-accent transition-colors line-clamp-2">
      <a href={href}>{title}</a>
    </h3>

    <!-- Excerpt -->
    {excerpt && (
      <p class="text-gray-600 text-sm mb-4 line-clamp-2">{excerpt}</p>
    )}

    <!-- Author -->
    <div class="flex items-center justify-between">
      <p class="text-sm text-gray-500">
        Author: <span class="font-medium text-gray-700">{author}</span>
      </p>
      <a href={href} class="text-accent font-semibold text-sm hover:text-accent-hover transition-colors">
        Read more
      </a>
    </div>
  </div>
</article>
