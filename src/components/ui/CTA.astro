---
import { getCTAContent } from '../../lib/content-utils';
import Button from './Button.astro';

// Load content from JSON file (editable via /dev/editor)
const content = getCTAContent();

interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  variant?: 'light' | 'dark';
}

// Props can still override JSON defaults
const {
  title = content.title,
  subtitle = content.subtitle,
  ctaText = content.ctaText,
  variant = 'light'
} = Astro.props;

const bgClass = variant === 'dark' ? 'bg-surface-900' : 'bg-surface-50';
const titleClass = variant === 'dark' ? 'text-white' : 'text-surface-900';
const subtitleClass = variant === 'dark' ? 'text-surface-300' : 'text-surface-600';
---

<section class={bgClass}>
  <div class="py-24 md:py-32 lg:py-40">
    <div class="px-4 md:px-8 lg:px-12">
      <div class="max-w-2xl mx-auto text-center">

        <h2 class={`text-2xl sm:text-3xl md:text-4xl font-medium leading-tight tracking-tight ${titleClass}`}>
          {title}
        </h2>

        <p class={`mt-6 text-lg md:text-xl ${subtitleClass}`}>
          {subtitle}
        </p>

        <div class="mt-10">
          <Button
            variant="primary"
            size="lg"
            calLink="arnelbukva/loudface-intro-call"
            class="px-8 py-4 rounded-full hover:-translate-y-0.5"
          >
            {ctaText}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </Button>
        </div>

      </div>
    </div>
  </div>
</section>
